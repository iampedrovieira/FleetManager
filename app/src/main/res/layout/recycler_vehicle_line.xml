<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/vehicle_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/brand_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vehicle_brand"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/vehicle_img"/>

    <TextView
        android:id="@+id/license_plate_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vehicle_license"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/brand_txt"
        app:layout_constraintLeft_toRightOf="@id/vehicle_img"/>

</androidx.constraintlayout.widget.ConstraintLayout>